@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratórios";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum Laboratório cadastrado!</p>
    <a class="btn btn-outline-dark" href="/Lab/Add">Cadastre um novo Laboratório</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número</th>
                <th>Nome</th>
                <th>Bloco</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model){
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Block</td>
                    <td><a href="/Lab/Show/@lab.Id" class="btn btn-primary btn-sm btn-dark">Ver</a>
                    <a href="/Lab/Update/@lab.Id" class="btn btn-primary btn-sm btn-dark">Editar</a>
                    <a href="/Lab/Delete/@lab.Id" class="btn btn-primary btn-sm btn-dark">Deletar</a></td>
                </tr>
            }
            <tr>
                <a class="btn btn-outline-dark" href="/Lab/Add">Cadastre um novo Laboratório</a>
            </tr>
        </tbody>
    </table>
}